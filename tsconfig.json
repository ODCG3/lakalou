{
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "utils/*"]
    },
    "allowJs": true,
    "declaration": true,
    "target": "ES6",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": ["PrismaControllers/**/*.ts","utils/**/*.d.ts"],
  "exclude": ["node_modules"]
}
